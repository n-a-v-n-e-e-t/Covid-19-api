<%-include('./partials/header.ejs')%>
<div class="container">
    <header>
        <h1 class="text-center"> Global Statistics </h1>
      </header>
                <div class="scrollable">
                    <table class="tablee table stickyH">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Country</th>
                                <th scope="col">New Confirmed</th>
                                <th scope="col">Confirmed</th>
                                <th scope="col">Recovered</th>
                                <th scope="col">Deaths</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% let i = 1; %>
                            <% table.forEach(countryStats =>{ %>
                                <tr> 
                                    <th scope="row"> <%= i+1 %> </th>
                                    <td> <%= countryStats.Country %> </td>
                                    <td> <%= countryStats.NewConfirmed %> </td>
                                    <td> <%= countryStats.TotalConfirmed %> </td>
                                    <td> <%= countryStats.TotalRecovered %> </td>
                                    <td> <%= countryStats.TotalDeaths %> </td>
                                </tr>
                          <%  i++;}) %>
                        </tbody>
                    </table>
                </div>
                <h2>Global Cases Time Series</h2>
         <iframe src="https://datahub.io/core/covid-19/view/0" width="100%" height="475px" frameborder="0"></iframe>
    <%-include('./partials/sticky_footer.ejs')%>
</div>
<%-include('./partials/footer.ejs')%>